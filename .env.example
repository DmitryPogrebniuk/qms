NODE_ENV=development
API_PORT=3000
API_HOST=0.0.0.0

# PostgreSQL
DATABASE_URL=postgresql://qms_user:qms_password_secure@postgres:5432/qms

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Keycloak / OIDC
KEYCLOAK_ISSUER=http://keycloak:8080
KEYCLOAK_REALM=qms
KEYCLOAK_CLIENT_ID=qms-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
JWT_SECRET=your-jwt-secret-key-change-in-production

# UCCX 15 Configuration (High Availability)
# For HA deployment, specify multiple nodes separated by commas
# Format: host1:port1,host2:port2 or just host1,host2 (default port 8443)
UCCX_NODES=uccx1.example.com:8443,uccx2.example.com:8443
UCCX_USERNAME=admin
UCCX_PASSWORD=password
UCCX_SYNC_INTERVAL_SECONDS=600
UCCX_TIMEOUT_MS=30000
UCCX_RETRY_ATTEMPTS=2

# MediaSense 11.5 Configuration
MEDIASENSE_HOST=mediasense.example.com
MEDIASENSE_PORT=8443
MEDIASENSE_USERNAME=admin
MEDIASENSE_PASSWORD=password
MEDIASENSE_BATCH_SIZE=100

# OpenSearch Configuration
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=SecurePassword123!
OPENSEARCH_USE_SSL=false

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=debug

# Application
APP_NAME=Cisco QMS
APP_VERSION=1.0.0
