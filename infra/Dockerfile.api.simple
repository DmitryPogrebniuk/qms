# Build stage
FROM node:20-slim AS builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y openssl ca-certificates && rm -rf /var/lib/apt/lists/*

# Copy only API files
COPY apps/api/package.json apps/api/tsconfig.json ./
COPY apps/api/prisma ./prisma
COPY apps/api/src ./src

# Install ALL dependencies directly (not workspace)
RUN npm install --legacy-peer-deps --no-fund

# Build TypeScript
RUN npm run build || echo "Build may fail, will use ts-node"

# Runtime stage
FROM node:18-slim
RUN npm install -g npm@10

WORKDIR /app

# Install runtime dependencies
# NOTE: Playwright for MediaSense; ffmpeg for MP3 export.
RUN apt-get update && apt-get install -y --no-install-recommends \
    openssl \
    ca-certificates \
    ffmpeg \
    chromium \
    fonts-liberation \
    libnss3 \
    libxss1 \
    libasound2 \
    libatk-bridge2.0-0 \
    libgtk-3-0 \
    libdrm2 \
    libgbm1 \
    libxshmfence1 \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY apps/api/package.json ./

# Install production dependencies
RUN npm install --legacy-peer-deps --no-fund

# Copy source (required for ts-node fallback)
COPY apps/api/src ./src
COPY apps/api/prisma ./prisma
COPY apps/api/tsconfig.json ./

# Copy dist from builder if build succeeded (will be used if available)
# Note: If build failed, we'll use ts-node at runtime

# Generate Prisma Client
RUN npx prisma generate || true

# Use system Chromium in container (avoid downloading browsers)
ENV PLAYWRIGHT_CHROMIUM_EXECUTABLE_PATH=/usr/bin/chromium
ENV PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1

ENV NODE_ENV=production
EXPOSE 3000

CMD ["sh", "-c", "echo 'API Starting...' && npx prisma generate && npx prisma migrate deploy && ([ -f dist/main.js ] && node dist/main.js || npx ts-node -O '{\"module\":\"commonjs\"}' src/main.ts)"]
